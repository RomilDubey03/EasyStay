<% layout("/layouts/boilerplate") -%>

        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Edit Your Listing</h3>
                <br>
                <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">

                    <div class="mb-3">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" id="title" name="title" value="<%= listing.title %>" required
                            class="form-control">
                    </div>
        
                    <div class="mb-3">
                        <label for="image" class="form-label">Image:</label>
                        <input type="text" id="image" name="image" value="<%= listing.image %>" required
                            class="form-control">

                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea id="description" name="description" required
                            class="form-control"><%= listing.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price:</label>
                        <input type="number" id="price" name="price" value="<%= listing.price %>" required
                            class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="country" value="<%= listing.country %>" required
                            class="form-control">
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label">Location:</label>
                        <input type="text" id="location" name="location" value="<%= listing.location %>" required
                            class="form-control">
                    </div>
                    <br>
                    <br>
                    <button type="submit" class="btn btn-dark edit-btn">Update Listing</button>
                </form>
            </div>
        </div>
        <!-- <a href="/listings/<%= listing._id %>">Back to Listing</a> -->