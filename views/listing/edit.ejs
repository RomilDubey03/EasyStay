<% layout("/layouts/boilerplate") -%>

    <div class="row">
        <div class="col-8 offset-2">
            <br>
            <h3>Edit Your Listing</h3>
            <br>
            <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="listing[title]" value="<%= listing.title %>" required
                        class="form-control">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div>
                    <p>Original Listing Image:</p>
                    <img src="<%= listing.image.url %>" alt="Preview Image" height="200" width="200" class="mb-3">
                </div>

                <div class="mb-3">
                    <label for="imageUrl" class="form-label">Image:</label>
                    <input type="file" id="imageUrl" name="listing[image]" 
                         class="form-control">
                    <div class="invalid-feedback">Please enter image url.</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="listing[description]" required
                        class="form-control"><%= listing.description %></textarea>
                    <div class="valid-feedback">
                        Please enter a description.
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" id="price" name="listing[price]" value="<%= listing.price %>" required
                                class="form-control">
                            <div class="invalid-feedback">
                                Please enter valid price.
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" id="country" name="listing[country]" value="<%= listing.country %>"
                                required class="form-control">
                            <div class="invalid-feedback">
                                Please enter valid country.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" id="location" name="listing[location]" value="<%= listing.location %>" required
                        class="form-control">
                    <div class="invalid-feedback">
                        Please enter valid location.
                    </div>
                </div>
                <button class="btn btn-dark">Update Listing</button>
            </form>
        </div>
    </div>
    <script src="/Js/script.js"></script>