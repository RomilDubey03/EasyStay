{
  "version": 2,
  "builds": [{ "src": "api/*.js", "use": "@vercel/node" }],
  "routes": [
    {
      "src": "/(.*)",
      "has": [{ "type": "file", "src": "public/$1" }],
      "dest": "/public/$1"
    },

    {
      "src": "^/$",
      "status": 302,
      "headers": { "Location": "/listings" }
    },

    {
      "src": "^/listings(?:/.*)?$",
      "dest": "api/listings.js"
    },

    {
      "src": "^/(?:login|register)(?:/.*)?$",
      "dest": "api/listings.js"
    }
  ]
}
