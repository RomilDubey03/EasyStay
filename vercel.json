{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "source": "/(.*)",
      "has": [{ "type": "file", "src": "public/$1" }],
      "destination": "/public/$1"
    },

    {
      "source": "^/$",
      "status": 302,
      "headers": { "Location": "/listings" }
    },

    {
      "source": "^/listings(?:/.*)?$",
      "destination": "api/listings.js"
    },

    {
      "source": "^/(?:login|register)(?:/.*)?$",
      "destination": "api/listings.js"
    }
  ]
}
